# OpenVINO GenAI 環境變數配置

# ==================== 日誌配置 ====================
# 日誌級別：DEBUG, INFO, WARNING, ERROR
OV_LOG_LEVEL=INFO

# ==================== 運行配置 ====================
# OpenVINO CPU 線程數（留空使用自動）
# OV_NUM_THREADS=4

# 是否使用 CPU 綁定
OV_AFFINITY=

# ==================== GPU 配置 ====================
# GPU 設備選擇（0, 1, 2...）
# OV_GPU_DEVICE=0

# ==================== NPU 配置 ====================
# NPU 設備選擇
# OV_NPU_DEVICE=0

# ==================== 模型配置 ====================
# 預設模型路徑
DEFAULT_MODEL_PATH=./models/TinyLlama-1.1B-int4

# 預設推理設備（CPU, GPU, NPU）
DEFAULT_DEVICE=CPU

# ==================== Hugging Face 配置 ====================
# Hugging Face API Token（用於私有模型）
# HF_TOKEN=

# Hugging Face 下載目錄
HF_HOME=./models

# 使用鏡像源（中國用戶）
# HF_ENDPOINT=https://hf-mirror.com

# ==================== 推理參數 ====================
# 預設最大生成 token 數
MAX_NEW_TOKENS=100

# 預設溫度（控制隨機性）
TEMPERATURE=0.7

# 預設 Top-K 採樣
TOP_K=50

# 預設 Top-P (Nucleus) 採樣
TOP_P=0.9

# ==================== 開發配置 ====================
# 是否啟用調試模式
DEBUG=false

# 是否保存生成的指標
SAVE_METRICS=false

# 指標輸出目錄
METRICS_OUTPUT=./metrics
